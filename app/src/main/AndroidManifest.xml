<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cookeryfinal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CookeryFinal">
        <activity android:name=".recipe_related.MyRecipeEdit"></activity>
        <activity android:name=".LogIn"/>
        <activity
            android:name=".DownloadActivity"
            android:theme="@style/Theme.DownLoadActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Settings" />
        <activity android:name=".Register"/>
        <activity
            android:name=".recipe_related.AddRecipe"
            android:theme="@style/Theme.AddRecipe.ActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CookeryFinal.NoActionBar"></activity>
        <activity android:name=".recipe_related.RecipePage" />
    </application>

</manifest>